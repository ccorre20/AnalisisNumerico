<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.eafit.dis.analisisnumerico.MasterActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/exprText"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Inserte una expresion"
        android:layout_marginStart="31dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="31dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tolText"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Inserte la tolerancia"
        app:layout_constraintLeft_toLeftOf="@+id/iterText"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/iterText"
        app:layout_constraintRight_toRightOf="@+id/iterText"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <EditText
        android:id="@+id/iterText"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Inserte el numero de iteraciones"
        app:layout_constraintLeft_toLeftOf="@+id/exprText"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/exprText"
        app:layout_constraintRight_toRightOf="@+id/exprText"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <EditText
        android:id="@+id/infText"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Inserte el limite inferior"
        app:layout_constraintLeft_toLeftOf="@+id/tolText"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/tolText"
        app:layout_constraintRight_toRightOf="@+id/tolText"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <EditText
        android:id="@+id/supText"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Inserte el limite superior"
        app:layout_constraintLeft_toLeftOf="@+id/infText"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/infText"
        app:layout_constraintRight_toRightOf="@+id/infText"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:onClick="onSendClick"
        android:text="Enviar"
        app:layout_constraintLeft_toLeftOf="@+id/supText"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/resultText"
        android:layout_marginBottom="6dp"
        app:layout_constraintRight_toRightOf="@+id/supText"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <EditText
        android:id="@+id/resultText"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Resultado"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/sendBtn"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="102dp"
        android:layout_marginBottom="101dp"
        app:layout_constraintTop_toTopOf="@+id/supText"
        app:layout_constraintRight_toRightOf="@+id/sendBtn" />

    <Button
        android:id="@+id/connectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onSearchClick"
        android:text="Comenzar Proceso Conexion"
        app:layout_constraintLeft_toLeftOf="@+id/resultText"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/resultText"
        app:layout_constraintRight_toRightOf="@+id/resultText" />
</android.support.constraint.ConstraintLayout>
